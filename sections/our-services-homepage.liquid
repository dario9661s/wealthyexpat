<style>

  .t-container {
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      max-width: 1200px;
      padding: 0;
  }

  .t920__container {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
  }

  .t920__row {
    display: inline;
    float: left;
    width: 100%;
  }

  .t-prefix_1 {
    padding-left: 100px;
  }

  .t-col_5 {
    max-width: 560px;
  }

  .t-col {
    display: inline;
    float: left;
    margin-left: 20px;
    margin-right: 20px;
    width: 100%;
  }

  {% if section.settings.enable_slider %}
    .t920__wrapper {
      position: relative;
      padding-left: 70px;
    }
  {% else %}
    .t920__wrapper {
      position: relative;
      padding-left: 110px;
    }
  {% endif %}

  .t920__title {
    z-index: 2;
    position: relative;
    font-weight: 700;
    padding-top: 65px;
    padding-bottom: 10px;
  }

  .t920__bottommargin_sm {
    margin-bottom: 4px;
  }

  .t-name_lg {
    font-size: 22px;
    line-height: 1.35;
  }

  .t-name {
    font-family: 'Roboto',Arial,sans-serif;
    font-weight: 600;
    color: #000000;
  }

  .t920__descr {
    z-index: 2;
    position: relative;
  }

  .t-descr_xs {
    font-size: 16px;
    line-height: 1.55;
  }

  .t-descr {
    font-family: 'Roboto',Arial,sans-serif;
    font-weight: 300;
    color: #000000;
  }

  .t920__symbol {
    position: absolute;
    z-index: 1;
    line-height: 150px;
    left: 0;
    right: 0;
    top: 0;
    font-size: 200px;
    font-family: sans-serif;
    font-weight: 700;
    color: rgba(230,230,230,.7);
    opacity: .6;
    user-select: none;
  }

  .t-prefix_1 {
    padding-left: 100px;
  }

  .t920__offset {
    height: 1px;
  }

  .t-clear {
    clear: both;
  }

  .t-container:before, .t-container:after, .t-container_10:before, .t-container_10:after, .t-container_8:before, .t-container_8:after, .t-container_100:before, .t-container_100:after {
    display: table;
    content: " ";
    width: 0;
  }

  @media screen and (max-width: 960px) {
    .t920__separator {
      display: none;
    }
  }
  
  @media screen and (max-width: 1200px) {
    .t-col {
        display: inline;
        float: left;
        margin-left: 10px;
        margin-right: 10px;
        width: 100%;
    }
  }

  @media screen and (max-width: 1200px) {
    .t-col_5 {
      max-width: 380px;
    }
  }

  @media screen and (max-width: 1200px) {
    .t-prefix_1 {
      padding-left: 80px;
    }
  }

  @media screen and (max-width: 960px) {
    .t-col {
      display: block;
      float: none;
      padding-left: 20px;
      padding-right: 20px;
      margin: 0;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }
  }

  @media screen and (max-width: 960px) {
    .t-col_1, .t-col_2, .t-col_3, .t-col_4, .t-col_5, .t-col_6, .t-col_7, .t-col_8, .t-col_9, .t-col_10, .t-col_11, .t-col_12 {
      width: 100%;
      max-width: 100%;
    }
  }

  @media screen and (max-width: 960px) {
    .t920__col {
      margin-bottom: 45px;
    }
  }

</style>

<div class="t-section__container_heading t-container">
  <div class="">
    <h2 class="banner__heading {{ section.settings.heading_size }}" style="text-align: center;">
      {{ section.settings.heading }}
    </h2>
  </div>
</div>

{% if section.settings.enable_slider %}
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <li class="swiper-slide">
            <div class="">
              <div class="t920__itemwrapper">
                <div class="t920__wrapper">
                  <div class="t920__title t-name t-name_lg t920__bottommargin_sm">
                    <div class="" style="font-size: 26px;">{{ block.settings.slide_heading }}</div>
                  </div>
                  <div class="t920__descr t-descr t-descr_xs">{{ block.settings.slide_text }}</div>
                  <div class="t920__symbol" style="color:#dbb75d;opacity:0.40;">0{{ forloop.index }}</div>
                </div>
              </div>
            </div>
          </li>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
  </div>
{% else %}
  <ul class="t920__container t-container">
    {% for block in section.blocks %}
      {% capture thecycle %}{% cycle 'even', 'odd' %}{% endcapture %}
        {% if thecycle == 'even' %}
          <li class="t920__row row__even">
            <div class="t920__col t-col t-prefix_1 t-col_5 t-animate t-animate__chain_first-in-row t-animate_started t-animate__chain_showed">
              <div class="t920__itemwrapper">
                <div class="t920__wrapper">
                  <div class="t920__title t-name t-name_lg t920__bottommargin_sm">
                    <div class="" style="font-size: 26px;">{{ block.settings.slide_heading }}</div>
                  </div>
                  <div class="t920__descr t-descr t-descr_xs">{{ block.settings.slide_text }}</div>
                  <div class="t920__symbol" style="color:#dbb75d;opacity:0.40;">0{{ forloop.index }}</div>
                </div>
              </div>
            </div>
          </li>
          <div class="t-clear t920__separator"> </div>
        {% else %}
          <li class="t920__row row__odd">
            <div class="t920__offset t-col t-col_5 t-prefix_1"> </div>
            <div class="t920__col t-col t-col_5 t-animate t-animate__chain_first-in-row t-animate_started t-animate__chain_showed">
              <div class="t920__itemwrapper">
                <div class="t920__wrapper">
                  <div class="t920__title t-name t-name_lg t920__bottommargin_sm">
                    <div class="" style="font-size: 26px;">{{ block.settings.slide_heading }}</div>
                  </div>
                  <div class="t920__descr t-descr t-descr_xs">{{ block.settings.slide_text }}</div>
                  <div class="t920__symbol" style="color:#dbb75d;opacity:0.40;">0{{ forloop.index }}</div>
                  <div class="t-clear t920__separator"> </div>
                </div>
              </div>
            </div>
          </li>
        {% endif %}
    {% endfor %}
  </ul>
{% endif %}

<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 1,
    pagination: {
      el: ".swiper-pagination",
      dynamicBullets: true,
    },
    breakpoints: {
      // when window width is >= 320px
      320: {
        slidesPerView: 1,
        spaceBetween: 20
      },
      // when window width is >= 991px
      991: {
        slidesPerView: 3,
        spaceBetween: 10
      }
    }
  });
</script>

{% schema %}
  {
    "name": "Our services",
    "settings": [
      {
          "type": "text",
          "id": "heading",
          "default": "Image banner",
          "label": "t:sections.image-banner.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        },
        {
          "type": "checkbox",
          "id": "enable_slider",
          "label": "Enable slider for our services",
          "default": false
        }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "slide_heading",
            "label": "Slide heading"
          },
          {
            "type": "text",
            "id": "slide_text",
            "label": "Slide text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Our services"
      }
    ]
  }
{% endschema %}